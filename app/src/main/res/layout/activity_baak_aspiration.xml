<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_baak_aspiration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.e_votee.aspirasimahasiswa.aspirasi.BaakAspiration">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/baakAspirasi"
        android:hint="Your Aspiration ..."
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/input_outline"
        android:padding="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/baakAspirasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/baakSolution"
        android:hint="Your Solution idea ..."
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/input_outline"
        android:padding="50dp" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmitAspirasi"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white" />

</RelativeLayout>
